{
  "name": "Screen Time",
  "description": "Time management made simple.",
  "version": "1.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "alarms",
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://localhost:5500/*",
    "http://127.0.0.1:5500/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/icons/favicon-16x16.png",
      "32": "/icons/favicon-32x32.png"
    }
  },
  "icons": {
    "16": "/icons/favicon-16x16.png",
    "32": "/icons/favicon-32x32.png",
    "192": "/icons/android-chrome-192x192.png",
    "512": "/icons/android-chrome-512x512.png"
  }
}
